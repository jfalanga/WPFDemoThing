<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="WPFDemoThing.StackPanelDemo"
        Title="StackPanelDemo" Height="300" Width="300">
    <StackPanel Orientation="Vertical">
        <Label Content="Label"/>
        <TextBox Text="TextBox"/>
        <CheckBox Content="CheckBox" />
        <CheckBox Content="CheckBox" />
        <ListBox >
            <ListBoxItem Content="ListBoxItem One" />
            <ListBoxItem Content="ListBoxItem Two" />
        </ListBox>
        <Button Content="Button" />
        <RadioButton Content="RadioButton"/>
        <RadioButton Content="RadioButton"/>
        <ComboBox>
            <Button ContentStringFormat="Justin"/>
            <Button/>
            <System:Object/>
        </ComboBox>
    </StackPanel>
</Window>
